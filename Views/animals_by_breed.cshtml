@if (@Model.Count == 0)
{
  <p>It is lonely here!</p>
}
else
{
  <h1>Here is your list of animals by breed:</h1>
  <ul>
    @foreach (var animal in Model)
    {
      <li><a href="/animals/@animal.GetId()">@animal.GetName(), @animal.GetBreed()</li>
    }
  </ul>
  <form action="/animals/delete" method="post">
    <button type="submit">Clear all animals</button>
  </form>
}
<p><a href="/animals/new">Add a new animal</a></p>
<p><a href="/animals">Return to All Animals</a></p>
<p><a href="/">Return to Main Page</a></p>
